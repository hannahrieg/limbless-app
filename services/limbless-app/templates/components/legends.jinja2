{% macro spreadsheet_error_legend() -%}
<div class="color-legend pt-1 pb-1">
    {% for error in SpreadSheetErrors %}
    <span class="legend-unit">
        <div class="color-square" style="background-color: {{ error.color }};"></div>
        <div class="color-label">{{ error.title }}</div>
    </span>
    {% endfor %}
</div>
{%- endmacro %}

{% macro icon_legend(icons) -%}
<div class="color-legend">
    {% for label, icon in icons.items() %}
    <span class="legend-unit">
        <div class="icon">{{ icon }}</div>
        <div class="icon-label">{{ label.replace("_", " ").title() }}</div>
    </span>
    {% endfor %}
</div>
{%- endmacro %}