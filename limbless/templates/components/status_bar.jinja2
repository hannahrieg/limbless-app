{% macro seq_request_status_bar(seq_request) -%}
{% if seq_request.status_type.value.name == 'Draft' %}
<div class="progress" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
    <div class="progress-bar progress-bar-striped bg-transparent" style="width: 100%; color: black;">
        {{ SeqRequestStatus.DRAFT.value.name }} {{ SeqRequestStatus.DRAFT.value.description | safe }}
    </div>
</div>
{% elif seq_request.status_type.value.name == 'Archived' %}
<div class="progress" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
<div class="progress-bar progress-bar-striped bg-info text-dark" style="width: 100%">
        {{ SeqRequestStatus.ARCHIVED.value.name }} {{ SeqRequestStatus.ARCHIVED.value.description | safe }}
    </div>
</div>
{% elif seq_request.status_type.value.name == 'Failed' %}
<div class="progress" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
    <div class="progress-bar progress-bar-striped bg-danger" style="width: 100%">
        {{ SeqRequestStatus.FAILED.value.name }} {{ SeqRequestStatus.FAILED.value.description | safe }}
    </div>
</div>
{% else %}
<div class="progress-stacked">
    {% if seq_request.status > 0 %}
    <div class="progress" role="progressbar" aria-label="Segment one" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
        <div class="progress-bar bg-tab-10-1">
        {{ SeqRequestStatus.SUBMITTED.value.name }} {{ SeqRequestStatus.SUBMITTED.value.description | safe }}
        </div>
    </div>
    {% endif %}
    {% if seq_request.status > 1 %}
    <div class="progress" role="progressbar" aria-label="Segment two" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
        <div class="progress-bar bg-tab-10-2">
        {{ SeqRequestStatus.LIBRARY_PREP.value.name }} {{ SeqRequestStatus.LIBRARY_PREP.value.description | safe }}
        </div>
    </div>
    {% endif %}
    {% if seq_request.status > 2 %}
    <div class="progress" role="progressbar" aria-label="Segment three" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
        <div class="progress-bar bg-tab-10-6">
        {{ SeqRequestStatus.SEQUENCING.value.name }} {{ SeqRequestStatus.SEQUENCING.value.description | safe }}
        </div>
    </div>
    {% endif %}
    {% if seq_request.status > 3 %}
            <div class="progress" role="progressbar" aria-label="Segment four" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
        <div class="progress-bar bg-tab-10-5">
        {{ SeqRequestStatus.DATA_PROCESSING.value.name }} {{ SeqRequestStatus.DATA_PROCESSING.value.description | safe }}
        </div>
    </div>
    {% endif %}
    {% if seq_request.status > 4 %}
    <div class="progress" role="progressbar" aria-label="Segment five" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
        <div class="progress-bar bg-tab-10-3">
        {{ SeqRequestStatus.FINISHED.value.name }} {{ SeqRequestStatus.FINISHED.value.description | safe }}
        </div>
    </div>
    {% endif %}
</div>
{% endif %}
{%- endmacro %}

